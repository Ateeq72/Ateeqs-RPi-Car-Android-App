<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:weightSum="1">
    
    <com.zerokol.views.JoystickView
		android:id="@+id/joystickView" android:layout_gravity="center_horizontal"
		android:layout_marginTop="20dip" android:layout_width="175dip"
		android:layout_height="175dip" />
    <TableLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
		android:layout_marginTop="10dip">
		<TableRow>
			<TextView android:text="" android:id="@+id/angleTextView"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<TextView android:text="" android:id="@+id/powerTextView"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<TextView android:text="" android:id="@+id/TextViewX"
				android:layout_width="100dip" android:layout_height="wrap_content"></TextView>
			<TextView android:text="" android:id="@+id/directionTextView"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
					</TableRow>
	</TableLayout>	
		<TableLayout  android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
		android:layout_marginTop="10dip" >
		<TableRow >
    <TextView android:id="@+id/textViewIp" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:text="@string/ip_address"></TextView>
    <EditText android:layout_height="wrap_content" 
        android:id="@+id/editTextIp" 
        android:inputType="text" 
        android:layout_width="200dp">
        <requestFocus></requestFocus>
    </EditText>
    </TableRow>
		<TableRow >
    <TextView android:id="@+id/textViewLocalPort" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:text="@string/localPort"></TextView>
    <EditText android:layout_height="wrap_content" 
        android:inputType="number"
        android:id="@+id/editTextLocalPort" 
        android:layout_width="60dp"></EditText></TableRow>
    
    <TableRow>
    <TextView android:id="@+id/textViewPorta" 
        android:layout_height="wrap_content" 
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:layout_width="wrap_content" 
        android:text="@string/port"></TextView>
    <EditText android:layout_height="wrap_content" 
        android:id="@+id/editTextPorta" 
        android:inputType="number" 
        android:layout_width="60dp" >
       </EditText>
    </TableRow>
    <!-- <TableRow >   
    <TextView android:id="@+id/textViewPayload" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:text="@string/payload"></TextView>
    <EditText android:layout_height="wrap_content" android:id="@+id/editTextPayload" android:layout_width="200dp"></EditText>
    </TableRow>
        <Button android:layout_height="wrap_content" android:layout_gravity="right" android:text="@string/send" android:id="@+id/buttonSend" android:layout_weight="0.04" android:layout_width="100dp"></Button>
    -->
    </TableLayout>
</LinearLayout>
